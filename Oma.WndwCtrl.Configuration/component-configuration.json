{
  "components": {
    "ping-xkcd": {
      "type": "sensor",
      "queryCommand": {
        "type": "cli",
        "fileName": "ping",
        "arguments": "xkcd.com",
        "transformations": [
          {
            "type": "parser",
            "statements": [
              "Regex.Match($'time=(\\d+)ms');",
              "Values.Index(1);",
              "Values.Average();"
            ]
          }
        ]
      },
      "trigger": {
        "type": "rate",
        "expression": "5 seconds"
      }
    },
    "failing-sensor": {
      "type": "sensor",
      "queryCommand": {
        "type": "cli",
        "fileName": "doesnt-exist",
        "arguments": "N/A",
        "transformations": []
      }
    },
    "invalid-parameters": {
      "type": "sensor",
      "queryCommand": {
        "type": "cli",
        "fileName": "ping",
        "arguments": "--this-should-not-work",
        "transformations": []
      }
    }
  }
}